  // Create Contact Us block.
  $block = \Drupal::entityTypeManager()
    ->getStorage('block_content')
    ->loadByProperties([
      'type' => 'text',
      'field_title' => 'Contact Us',
    ]);

  if (empty($block)) {
    $contact_us_block = BlockContent::create([
      'info' => 'Contact Us',
