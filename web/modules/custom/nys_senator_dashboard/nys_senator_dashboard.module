/**
 * Implements hook_ENTITY_TYPE_access() for webform entity.
 *
 * Restricts access to webforms based on the user's managed districts.
 * Only allows access if the user's managed district IDs match a district
 * linked to a senator that is referenced in the webform.
 */
function nys_senator_dashboard_webform_access(WebformInterface $webform, $operation, AccountInterface $account) {
  // Skip access check for users with administrative permissions.
  if ($account->hasPermission('administer webform') || $account->hasPermission('administer webforms')) {
    return AccessResult::neutral();
  }

  // Get the user's active managed senator.
  try {
    $active_managed_senator = \Drupal::service('nys_senator_dashboard.managed_senators_handler')
      ->ensureAndGetActiveSenator(FALSE);
  }
  catch (\Throwable) {
    return AccessResult::neutral();
  }

  // Get the webform node (used to get linked senators).
  $node_storage = \Drupal::entityTypeManager()->getStorage('node');
  $query = $node_storage->getQuery()
    ->condition('type', 'webform')
    ->condition('webform', $webform->id())
    ->accessCheck(FALSE);
  $nids = $query->execute();
  if (empty($nids)) {
    return AccessResult::neutral();
  }
  $webform_node = $node_storage->load(reset($nids));

  // Get the senator IDs referenced in the webform node.
  $webform_senator_ids = [];
  if ($webform_node->hasField('field_senator_multiref')) {
    $field_senator_multiref = $webform_node->get('field_senator_multiref');
    if ($field_senator_multiref) {
      foreach ($field_senator_multiref as $item) {
        $webform_senator_ids[] = $item->target_id;
      }
    }
  }
  if (empty($webform_senator_ids)) {
    return AccessResult::neutral();
  }

  // Check if the webform references the user's active managed senator.
  if (in_array($active_managed_senator->id(), $webform_senator_ids)) {
    return AccessResult::allowed();
  }

  // Otherwise, return neutral.
  return AccessResult::neutral();
}

/**
 * Implements hook_ENTITY_TYPE_access() for webform_submission entity.
 *
 * Restricts access to webform submissions based on the user's managed districts.
 * Only allows access if the user's managed district IDs match a district
 * linked to a senator that is referenced in the webform.
 */
function nys_senator_dashboard_webform_submission_access(WebformSubmissionInterface $webform_submission, $operation, AccountInterface $account) {
  if ($account->hasPermission('administer webform') || $account->hasPermission('administer webform submission')) {
    return AccessResult::neutral();
  }

  $webform = $webform_submission->getWebform();
  if (!$webform) {
    return AccessResult::neutral();
  }

  // Delegate to the webform access check.
  return nys_senator_dashboard_webform_access($webform, $operation, $account);
}

function nys_senator_dashboard_entity_view(array &$build, \Drupal\Core\Entity\EntityInterface $entity, \Drupal\Core\Entity\Display\EntityViewDisplayInterface $display) {
  /** @var Drupal\flag\FlagService $flag_service */
  $flag_service = \Drupal::service('flag');
  /** @var \Drupal\nys_senator_dashboard\Service\ExtraFieldBuilder $extra_field_builder */
  $extra_field_builder = \Drupal::service('nys_senator_dashboard.extra_field_builder');

  $flags = $flag_service->getAllFlags($entity->getEntityTypeId(), $entity->bundle());
  foreach ($flags as $flag) {
    if (!$flag->status()) {
      continue;
    }

    if ($display->getComponent('nys_senator_dashboard_flag_count_' . $flag->id())) {
      $build['nys_senator_dashboard_flag_count_' . $flag->id()] = $extra_field_builder->buildFlagCount($entity, $flag->id());
    }

    if ($display->getComponent('nys_senator_dashboard_district_flag_count_' . $flag->id())) {
      $build['nys_senator_dashboard_district_flag_count_' . $flag->id()] = $extra_field_builder->buildDistrictFlagCount($entity, $flag->id());
    }
  }

  if ($display->getComponent('nys_senator_dashboard_link_to_constituents_list')) {
    $build['nys_senator_dashboard_link_to_constituents_list'] = $extra_field_builder->buildLinkToConstituentsList($entity);
  }

  if ($display->getComponent('nys_senator_dashboard_status')) {
    $build['nys_senator_dashboard_status'] = $extra_field_builder->buildStatus($entity);
  }

  if ($display->getComponent('nys_senator_dashboard_constituents_response_count')) {
    $build['nys_senator_dashboard_constituents_response_count'] = $extra_field_builder->buildConstituentsResponseCount($entity);
  }

  if ($display->getComponent('nys_senator_dashboard_webform_submissions_download')) {
    $build['nys_senator_dashboard_webform_submissions_download'] = $extra_field_builder->buildWebformSubmissionsDownload($entity);
  }

  if ($display->getComponent('nys_senator_dashboard_vote_totals')) {
    $build['nys_senator_dashboard_vote_totals'] = $extra_field_builder->buildVoteTotals($entity);
  }

  if ($display->getComponent('nys_senator_dashboard_vote_totals_district_breakdown')) {
    $build['nys_senator_dashboard_vote_totals_district_breakdown'] = $extra_field_builder->buildVoteTotalsDistrictBreakdown($entity);
  }

  if ($display->getComponent('nys_senator_dashboard_bill_action_links')) {
    $build['nys_senator_dashboard_bill_action_links'] = $extra_field_builder->buildBillActionLinks($entity);
  }

  if ($display->getComponent('nys_senator_dashboard_followers_link')) {
    $build['nys_senator_dashboard_followers_link'] = $extra_field_builder->buildFollowersLink($entity);
  }

  if ($display->getComponent('nys_senator_dashboard_path_alias') && $entity->getEntityTypeId() === 'node') {
    $build['nys_senator_dashboard_path_alias'] = $extra_field_builder->buildPathAlias($entity);
  }
}
