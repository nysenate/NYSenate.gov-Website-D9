/**
 * Implements hook_query_TAG_alter().
 */
function nys_senators_query_nys_senators_access_alter(AlterableInterface $query) {

  if ($query instanceof SelectInterface) {
    // Add op metadata so node_access is used.
    $user = User::load(\Drupal::currentUser()->id());
    $senator_helper = \Drupal::service('nys_senators.senators_helper');

    // Check for MCP.
    if (!$senator_helper->senatorUserIsAdmin($user) &&
      $user->hasField('field_senator_multiref') &&
      !empty($senators = $user->field_senator_multiref->getValue()) &&
      (count($senators) > 1 || $senators[0]['target_id'] != 0)) {

      // Format a nice array for query conditions.
      $senator_tids = [];

      foreach ($senators as $senator) {
        $senator_tids[] = $senator['target_id'];
      }

      // Adding in join to access table to see only editable materials for MCPs.
      $query->join('node_access', 'na', 'node_field_data.nid = na.nid');
      $query->condition('na.realm', 'microsite_producers');
      $query->condition('na.gid', $senator_tids, 'IN');

    }
  }
}

/**
 * Implements hook_query_TAG_alter().
 */
function nys_senators_query_taxonomy_term_access_alter(AlterableInterface $query): void {
  // Prevent recursion with entity query in nys_senators/src/SenatorsHelper.php.
  if ($query->hasTag('prevent_recursion')) {
    return;
  }

  // If not on a node add or edit route, return.
  $route_match = \Drupal::routeMatch();
  $routes = [
    'node.add',
    'entity.node.edit_form',
  ];
  if (!in_array($route_match->getRouteName(), $routes)) {
    return;
  }

  // If taxonomy is not 'committees', return.
  $is_committees_vid = FALSE;
  foreach ($query->conditions() as $condition) {
    if (
      (($condition['field'] ?? '') === 't.vid')
      && (($condition['value'] ?? '') === 'committees')
    ) {
      $is_committees_vid = TRUE;
    }
  }
  if (!$is_committees_vid) {
    return;
  }

  // If the user is not an MCP, return.
  $current_user = UsersHelper::resolveUser();
  if (!UsersHelper::isMcp($current_user)) {
    return;
  }

  // Show no committee options if an MCPs senator isn't a committee chair.
  $committee_tids = UsersHelper::getManagedCommittees($current_user);
  if (empty($committee_tids)) {
    $query->alwaysFalse();
    return;
  }

  // Limit MCPs to only select committee that their senator chairs.
  $primary_table = '';
  $tables = $query->getTables();
  $target_tables = ['taxonomy_term_data', 'taxonomy_term_field_data'];
  foreach ($tables as $info) {
    $table = $info['table'];
    if (!in_array($table, $target_tables)) {
      continue;
    }
    $primary_table = $info['alias'];
  }
  $vids = ['committees'];
  $query->leftJoin('taxonomy_term_field_data', 'ttfd', $primary_table . '.tid = ttfd.tid');
  $or = new Condition('OR');
  $or->condition($primary_table . '.tid', array_values($committee_tids), 'IN');
  $or->condition('ttfd.vid', $vids, 'NOT IN');
  $query->condition($or);
}

