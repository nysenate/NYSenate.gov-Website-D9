{{ attach_library('nimbus_theme/hero') }}

<section class="hero">
  {% if hero.media %}
    {%
      include '@nimbus_theme/media/media.twig' with {
        "image": hero.media.image
      } only
    %}
  {% endif %}

  <div class="hero__content">

    <div class="content">
      {% if hero.heading %}
        {%
          include '@nimbus_theme/heading/heading.twig' with {
            "heading": hero.heading
          } only
        %}
      {% endif %}

      {% if hero.eyebrow %}
        {%
          include '@nimbus_theme/eyebrow/eyebrow.twig' with {
            "eyebrow": hero.eyebrow
          } only
        %}
      {% endif %}

      {% if hero.body %}
        {%
          include '@nimbus_theme/body-text/body-text.twig' with {
            "body_text": hero.body.body_text,
            "modifier": hero.body.classes
          } only
        %}
      {% endif %}

      {% if hero.button.url %}
        {%
          include '@nimbus_theme/button/button.twig' with {
            "button": hero.button
          } only
        %}
      {% endif %}
    </div>
  </div>
</section>
