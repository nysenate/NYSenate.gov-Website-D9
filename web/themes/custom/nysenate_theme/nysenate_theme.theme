/**
 * Implements hook_preprocess_page().
 */
function nysenate_theme_preprocess_page(&$variables) {
  $user_storage = \Drupal::entityTypeManager()->getStorage('user');
  $flag_link_service = \Drupal::service('flag.link_builder');
  $menu_tree = \Drupal::menuTree();
  // Build the typical default set of menu tree parameters.
  $parameters = $menu_tree->getCurrentRouteMenuTreeParameters('socials');
  // Load the tree based on this set of parameters.
  $tree = $menu_tree->load('socials', $parameters);

  $manipulators = [
    ['callable' => 'menu.default_tree_manipulators:checkNodeAccess'],
    ['callable' => 'menu.default_tree_manipulators:checkAccess'],
    ['callable' => 'menu.default_tree_manipulators:generateIndexAndSort'],
  ];

  // Transform the tree using the manipulators you want.
  $tree = $menu_tree->transform($tree, $manipulators);
  // Finally, build a renderable array from the transformed tree.
  $menu = $menu_tree->build($tree);

  if (isset($menu['#items'])) {
    $socials = [];
    foreach ($menu['#items'] as $link) {
      $socials[] = [
        'icon' => $link['title'],
        'url' => $link['url']->toString(),
      ];
    }
    $variables['socials'] = $socials;
  }

  // Microsite theme settings.
  $node_types = [
    'microsite_page',
    'article',
    'event',
    'honoree',
    'in_the_news',
    'petition',
    'webform',
    'video',
  ];
  $node = \Drupal::routeMatch()->getParameter('node');
  if (!empty($node) && is_object($node) && in_array($node->bundle(), $node_types)) {
    if ($node->hasField('field_senator_multiref') && !$node->get('field_senator_multiref')->isEmpty()) {
      $sid = $node->field_senator_multiref->target_id;
      $senator = \Drupal::entityTypeManager()->getStorage('taxonomy_term')
        ->load($sid);

      if (!empty($senator->field_microsite_theme)) {
        $variables['theme'] = $senator->field_microsite_theme->value;
      }
    }
  }

  // Set Dashboard variables.
  $user = $user_storage->load(\Drupal::currentUser()->id());
  $user_link = $user->toUrl()->toString();
  $user_parts = explode('/', $user_link);
  $user_name = $user_parts[2] ?? \Drupal::currentUser()->id();

  $variables['dashboard_link'] = '/dashboard/issues';
  $variables['edit_account_link'] = '/dashboard/edit';
  $variables['sidebar'] = [
    'upper_links' => [
      [
        'text' => 'Profile',
        'url' => '/dashboard',
      ],
      [
        'text' => 'Edit Profile',
        'url' => '/dashboard/edit',
      ],
    ],
    'links' => [
      [
        'text' => 'Bills',
        'url' => '/dashboard/bills',
      ],
      [
        'text' => 'Issues',
        'url' => '/dashboard/issues',
      ],
      [
        'text' => 'Committees',
        'url' => '/dashboard/committees',
      ],
      [
        'text' => 'Petitions & Questionnaires',
        'url' => '/dashboard/petitions',
      ],
    ],
  ];

  $current_path = \Drupal::request()->getRequestUri();
  $arr_path = explode('/', $current_path);

  if ($arr_path && is_array($arr_path)) {
    $display_name = 'My';

    if ($arr_path[1] == 'dashboard') {
      $variables['is_dashboard'] = TRUE;
    }
    elseif ($arr_path[1] == 'users') {
      $current_path = \Drupal::service('path.current')->getPath();
      $args = explode('/', $current_path);
      // Get the Dashboard user.
      if (is_numeric($args[2])) {
        $user = $user_storage->load($args[2]);
      }
      else {
        $user = $user_storage->loadByProperties(['name' => $args[2]]);
        if ($user) {
          $user = reset($user);
        }
        else {
          // Get user info from pathalias.
          $path = \Drupal::service('path_alias.manager')->getPathByAlias('/users/' . $args[2]);
          $path_args = explode('/', $path);
          $user = $user_storage->load($path_args[2]);
        }
      }

      if (\Drupal::currentUser()->id() != $user->id() && !in_array('administrator', \Drupal::currentUser()->getRoles())) {
        $senator = \Drupal::entityTypeManager()->getStorage('taxonomy_term')
          ->loadByProperties([
            'field_user_account' => $user->id(),
          ]);
        if ($senator) {
          $senator = reset($senator);
          $term_path = '/taxonomy/term/' . $senator->id();
          $variables['is_senator_dashboard'] = TRUE;
        }
      }
    }
    elseif ($arr_path[1] == 'taxonomy' && isset($arr_path[4])) {
      $variables['is_senator_dashboard'] = TRUE;
      $senator = \Drupal::entityTypeManager()->getStorage('taxonomy_term')
        ->load($arr_path[3]);

      $term_path = '/taxonomy/term/' . $arr_path[3];
    }

    if (isset($variables['is_senator_dashboard']) && $variables['is_senator_dashboard']
      && isset($senator) && isset($term_path)) {
      $display_name = $senator->name->value . "'s";
      $senator_account = $user_storage->load($senator->field_user_account->target_id);
      $senator_link = $senator_account->toUrl()->toString();
      $senator_parts = explode('/', $senator_link);
      $senator_name = $senator_parts[2] ?? $senator_account->id();

      $variables['sidebar'] = [
        'upper_links' => [
          [
            'text' => 'Overview',
            'url' => $term_path . '/overview',
          ],
        ],
        'links' => [
          [
            'text' => 'Constituents',
            'url' => $term_path . '/constituents',
          ],
          [
            'text' => 'Bills',
            'url' => $term_path . '/bills',
          ],
          [
            'text' => 'Issues',
            'url' => $term_path . '/issues',
          ],
          [
            'text' => 'Petitions',
            'url' => $term_path . '/petitions',
          ],
          [
            'text' => 'Questionnaires',
            'url' => $term_path . '/questionnaires',
          ],
        ],
      ];
    }

    $variables['dashboard_display_name'] = $display_name;

    $variables['actionbar']['type'] = 'default';
    // Variables for issues and committees header action bar.
    $parameters = \Drupal::routeMatch()->getParameters()->all();
    if (isset($parameters['taxonomy_term'])) {
      $term = \Drupal::routeMatch()->getParameter('taxonomy_term');
      $vid = $term->bundle();
      $vocabulary = \Drupal::entityTypeManager()->getStorage('taxonomy_vocabulary')->load($vid);

      if ($vocabulary->label() == "Issues") {
        $variables['actionbar']['type'] = 'issue';
        $variables['actionbar']['flag_follow_issue'] = $flag_link_service->build($term->getEntityTypeId(), $term->id(), 'follow_issue');
        $variables['actionbar']['issue_title'] = $term->getName();
      }
      if ($vocabulary->label() == "Majority Issues") {
        $variables['actionbar']['type'] = 'issue';
        $variables['actionbar']['flag_follow_issue'] = $flag_link_service->build($term->getEntityTypeId(), $term->id(), 'follow_issue');
        $variables['actionbar']['issue_title'] = $term->getName();
      }
      if ($vocabulary->label() == "Committees") {
        $variables['actionbar']['type'] = 'committee';
        $variables['actionbar']['flag_follow_committee'] = $flag_link_service->build($term->getEntityTypeId(), $term->id(), 'follow_committee');
      }
    }
  }

  // If logged in, populate variables for user's senator link and headshot.
  if (\Drupal::currentUser()->isAuthenticated()) {
    $senator = $user->get('field_district')->entity->field_senator->entity ?? NULL;
    $headshot = $senator->field_member_headshot->entity ?? NULL;
    if (($senator instanceof TermInterface) && $headshot) {
      $variables['has_senator'] = TRUE;
      $variables['senator_link'] = \Drupal::service('nys_senators.microsites')->getMicrosite($senator);
      $variables['headshot'] = \Drupal::entityTypeManager()
        ->getViewBuilder('media')
        ->view($headshot, 'thumbnail');
    }
  }
}

