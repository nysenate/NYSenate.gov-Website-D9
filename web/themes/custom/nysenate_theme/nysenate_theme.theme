/**
 * Implements hook_views_pre_render().
 */
function nysenate_theme_views_pre_render(ViewExecutable $view) {
  if ($view->id() == 'senator_microsite_content' && $view->current_display == 'microsite_newsroom_content') {
    // Retrieve the filter inputs.
    $filter = $view->exposed_raw_input;
    $filter = $filter['type_1'];
    // 1 stands for Press Release.
    if ($filter == '1') {
      $results = $view->result;
      $filteredResults = [];
      foreach ($results as $result) {
        // Get all the press_release category nodes.
        /** @var \Drupal\node\Entity\Node $node */
        $node = $result->_entity;
        if ($node->hasField('field_category') && !$node->get('field_category')->isEmpty()) {
          if ($node->field_category->value == 'press_release') {
            $filteredResults[] = $result;
          }
        }
      }
      // Override the views results.
      $view->result = $filteredResults;
      $view->total_rows = count($filteredResults);
    }
  }

  if ($view->id() == 'constituent_petitions_and_questionnaires' && $view->current_display == 'constituent_questionnaires_submitted') {
    $results = $view->result;
    $unique_node_ids = [];
    foreach ($results as $index => $row) {
      $node = $row->_entity;
      $nid = $row->nid ?? NULL;

      // Remove duplicate node.
      if (!in_array($nid, $unique_node_ids)) {
        $unique_node_ids[] = $nid;
      }
      else {
        unset($view->result[$index]);
        continue;
      }

      if (\Drupal::currentUser()->id() && isset($node->webform[0]->target_id)) {
        $result = \Drupal::database()
          ->select('webform_submission', 'w')
          ->fields('w', ['completed'])
          ->condition('uid', \Drupal::currentUser()->id())
          ->condition('entity_type', 'node')
          ->condition('entity_id', $nid)
          ->condition('webform_id', $node->webform[0]->target_id)
          ->orderBy('sid', 'DESC')
          ->execute()
          ->fetchField();

        /* @phpstan-ignore-next-line */
        $view->result[$index]->field_timestamp = $result;
      }
    }
  }

  if ($view->id() == 'upcoming_legislation' && $view->current_display != 'a_s_replace_record') {
    $results = $view->result;
    $unique_node_ids = [];
    foreach ($results as $key => $item) {
      $node = $item->_entity;
      $a_s_replace_view = NULL;
      /* @phpstan-ignore-next-line */
      $view->result[$key]->overridden = NULL;

      if (isset($node->field_ol_chamber[0]) && $node->field_ol_chamber[0]->value == 'assembly') {
        // Assembly bills should show their Senate same-as's.
        /* @phpstan-ignore-next-line */
        $same_as_info = json_decode($item->node__field_ol_same_as_field_ol_same_as_value)[0];

        // Query DB for correct bill to display.
        $query = \Drupal::database()->select('node__field_ol_print_no', 'pn');
        $query->addField('pn', 'entity_id');
        $query->leftJoin('node__field_ol_session', 's', 'pn.entity_id = s.entity_id');
        $query->condition('pn.field_ol_print_no_value', ($same_as_info->printNo ?? ''));
        $query->condition('s.field_ol_session_value', ($same_as_info->session ?? ''));
        $sa_bill_nid = $query->execute()->fetchField();

        // Load replacement result record.
        $a_s_replace_view = NULL;
        $a_s_replace_view = Views::getView('upcoming_legislation');
        $a_s_replace_view->setArguments([$sa_bill_nid]);
        $a_s_replace_view->setDisplay('a_s_replace_record');
        $a_s_replace_view->preExecute();
        $a_s_replace_view->execute();

        $node = $a_s_replace_view->result[0]->_entity;

        /* @phpstan-ignore-next-line */
        $assembly_status = $item->node__field_ol_last_status_field_ol_last_status_value;
        /* @phpstan-ignore-next-line */
        $assembly_status_date = $item->node__field_ol_last_status_date_field_ol_last_status_date_va;

        $view->result[$key] = $a_s_replace_view->result[0];
        $view->result[$key]->index = $item->index;
        /* @phpstan-ignore-next-line */
        $view->result[$key]->node_field_data_title = $node->title->value ?? NULL;
        /* @phpstan-ignore-next-line */
        $view->result[$key]->node__field_issues_field_issues_target_id = $node->field_issues[0]->target_id ?? NULL;
        /* @phpstan-ignore-next-line */
        $view->result[$key]->node__field_ol_name_field_ol_name_value = $node->field_ol_name[0]->value ?? NULL;
        /* @phpstan-ignore-next-line */
        $view->result[$key]->node__field_ol_name_field_ol_name_value = $node->field_ol_name[0]->value ?? NULL;
        /* @phpstan-ignore-next-line */
        $view->result[$key]->node__field_ol_sponsor_field_ol_sponsor_target_id = $node->field_ol_sponsor[0]->target_id ?? NULL;
        /* @phpstan-ignore-next-line */
        $view->result[$key]->node__field_ol_sponsor_name_field_ol_sponsor_name_value = $node->field_ol_sponsor_name[0]->value ?? NULL;
        /* @phpstan-ignore-next-line */
        $view->result[$key]->node__field_ol_last_status_field_ol_last_status_value = $assembly_status;
        /* @phpstan-ignore-next-line */
        $view->result[$key]->node__field_ol_last_status_date_field_ol_last_status_date_va = $assembly_status_date;

        /* @phpstan-ignore-next-line */
        $view->result[$key]->overridden = $item->nid;
      }
    }
  }

  if ($view->id() == 'committee_members' && $view->current_display == 'chair') {
    $results = $view->result;
    $unique_node_ids = [];
    foreach ($results as $index => $row) {
      if (isset($row->_relationship_entities['field_senator']) &&
        $row->_relationship_entities['field_senator'] instanceof TermInterface) {
        $senator = $row->_relationship_entities['field_senator'];
        /* @phpstan-ignore-next-line */
        $view->result[$index]->field_senator_tid = $senator->id();
      }
    }
  }

}

