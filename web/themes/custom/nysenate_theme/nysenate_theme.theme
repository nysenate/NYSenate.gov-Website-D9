    $variables['issue'] = get_issue_card($term);
  }

  if ($view->id() == "senator_and_committee_lists" && $view->current_display == "senators_list") {
    $term = $variables['row']->_entity;
    $senator_link = \Drupal::service('nys_senators.microsites')
      ->getMicrosite($term);
    $variables['senator_link'] = $senator_link;
  }

  if ($view->id() == "committee_members" && $view->current_display == "chair") {
    $senator_tid = '';
    if (isset($variables['fields']['tid']->content)) {
      if ($variables['fields']['tid']->content instanceof Markup) {
        $senator_tid = $variables['fields']['tid']->content->__toString();
      }
      else {
        $senator_tid = $variables['fields']['tid']->content;
      }
    }
    $senator_tid = (int) trim(strip_tags($senator_tid));
    $term = $term_storage->load($senator_tid);
    $senator_link = \Drupal::service('nys_senators.microsites')
      ->getMicrosite($term);
    $variables['senator_link'] = $senator_link;
  }

  if ($view->id() == 'committee_meetings' && $view->current_display == 'agenda') {
    $node = $variables['row']->_entity;

    if (isset($variables['fields']['field_ol_bill_message']->content)) {
      if ($variables['fields']['field_ol_bill_message']->content instanceof Markup) {
        $referred_to = $variables['fields']['field_ol_bill_message']->content->__toString();
      }
      else {
        $referred_to = $variables['fields']['field_ol_bill_message']->content;
      }
      $referred_to = trim(strip_tags($referred_to));

      if ($referred_to) {
        $committee_name = str_ireplace('refer to ', '', $referred_to);
        $committee_name = str_ireplace(' committee', '', $committee_name);
        $committee = $term_storage->loadByProperties([
          'vid' => 'committees',
          'name' => $committee_name,
        ]);

        if ($committee) {
          $committee = reset($committee);

          $variables['committee_url'] = $committee->toUrl()->toString();
          $variables['committee_name'] = $committee->getName();
        }
      }
    }
  }
}

