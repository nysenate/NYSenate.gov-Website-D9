/**
 * Implements hook_preprocess_HOOK().
 */
function nysenate_theme_preprocess_node__view__constituent_bills__constituent_bills_voted_on(&$variables) {

  $node = $variables['node'];

  // Last status.
  $last_status_values = $node->field_ol_last_status->getSetting('allowed_values');
  $last_status = !empty($node->field_ol_last_status->value) ? $last_status_values[$node->field_ol_last_status->value] : '';

  $committee_link = '';
  if ($node->hasField('field_ol_latest_status_committee') &&
    !$node->get('field_ol_latest_status_committee')->isEmpty() &&
    $last_status == 'In Senate Committee') {
    $committee = $node->field_ol_latest_status_committee->value;
    $link = '/committees/' .
      strtolower(str_replace([',', ' '], ['', '-'], $committee));
    $committee_link = [
      'url' => $link,
      'text' => $committee . ' Committee',
    ];
  }

  // Published Date.
  $published_date = '';
  if ($node->hasField('field_ol_publish_date') &&
    !$node->get('field_ol_publish_date')->isEmpty()) {
    $published_date = $node->field_ol_publish_date->value;
  }
  // If published_date is not timestamp, use strtotime().
  if (!empty($published_date) && strpos($published_date, 'T') !== FALSE) {
    $published_date = strtotime($published_date);
  }

  // Issues.
  $issues = [];
  if ($node->hasField('field_issues') && !$node->get('field_issues')->isEmpty()) {
    foreach ($node->field_issues as $issue) {
      $url = Link::fromTextAndUrl($issue->entity->getName(), $issue->entity->toUrl());
      $issues[] = $url;
    }
  }

  // Sponsor.
  $sponsor_name = NULL;
  $sponsor = NULL;
  if ($node->hasField('field_ol_sponsor') && !empty($node->field_ol_sponsor->target_id)) {
    $sponsor = \Drupal::entityTypeManager()
      ->getStorage('taxonomy_term')
      ->load($node->field_ol_sponsor->target_id);
  }

  if (!empty($sponsor)) {
    $given = $sponsor->field_senator_name->given ?? '';
    $family = $sponsor->field_senator_name->family ?? '';
    $sponsor_name = $given . ' ' . $family;
    $sponsor_name = Link::fromTextAndUrl($sponsor_name, $sponsor->toURL());
  }

  /** @var \Drupal\votingapi\VoteStorage $vote_storage */
  $vote_storage = \Drupal::entityTypeManager()->getStorage('vote');

  $user_votes = $vote_storage->getUserVotes(\Drupal::currentUser()->id(), 'nys_bill_vote', 'node', $node->id());

  $poll_text = NULL;
  if (!empty($user_votes)) {
    /** @var \Drupal\votingapi\Entity\Vote $vote_entity */
    $vote_entity = $vote_storage->load(end($user_votes));
    $vote_value = (int) $vote_entity->getValue();

    if ($vote_value == 1) {
      $poll_text = 'YOU ARE IN FAVOR OF THIS BILL';
    }
    else {
      $poll_text = 'YOU ARE OPPOSED TO THIS BILL';
    }
  }

  $route_node = \Drupal::routeMatch()->getParameter('node');
  $bill_vote_form_settings = [
    'entity_type' => $node->bundle(),
    'entity_id' => $node->id(),
    'is_embed' => empty($route_node) || $route_node->id() !== $node->id(),
  ];

  $variables['content']['bill'] = [
    'featured' => TRUE,
    'small' => FALSE,
    'is_poll' => TRUE,
    'resolution' => TRUE,
    'hide_subscribe' => TRUE,
    'node_id' => $node->id(),
    'link' => $node->toUrl()->toString(),
    'number' => $node->getTitle(),
    'description_position' => 'top',
    'description' => !empty($node->field_ol_name->value) ? $node->field_ol_name->value : '',
    'date' => !empty($published_date) ? \Drupal::service('date.formatter')->format($published_date, '', 'F d, Y') : '',
    'update_location' => $last_status,
    'committee_link' => $committee_link,
    'positions' => nysenate_bill_positions($node),
    'issues' => $issues,
    'sponsor' => $sponsor_name,
    'sponsor_text' => 'SPONSORS',
    'poll_text' => $poll_text,
    'action' => \Drupal::service('path.current')->getPath(),
    // @phpstan-ignore-next-line
    'vote_widget' => \Drupal::formBuilder()->getForm('Drupal\nys_bill_vote\Form\BillVoteWidgetForm', $bill_vote_form_settings),
  ];

}

