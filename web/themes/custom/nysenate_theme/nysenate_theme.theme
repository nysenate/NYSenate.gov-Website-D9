          elseif ($block['#block_content']->field_title->value == 'Visit Capitol text') {
            $variables['about_tour']['title'] =
              $block['field_show_title'][0]['#markup'] == 'On' ? 'Visit the Capitol' :
                ($variables['about_tour']['title'] ?? '');
            $variables['about_tour']['description'] = $block['field_body_left'][0];
          }
          elseif ($block['#block_content']->field_title->value == 'Visit Capitol Link and Info') {
            $variables['about_tour']['contact'] = [
              'title' => FALSE,
              'full' => $block['field_body_right'][0],
            ];
            $variables['about_tour']['cta'] = [
              'text' => FALSE,
              'full' => $block['field_body_left'][0],
            ];
          }
          elseif ($block['#block_content']->field_title->value == 'Student Programs') {
            $variables['about_student_programs'] = [
              'title' => $block['#block_content']->field_title->value,
              'body' => $block['field_body_left'][0],
              'program_block' => '',
              'programs' => FALSE,
            ];
            $variables['sticky_nav']['sections'][] = [
              'title' => $block['#block_content']->field_title->value,
              'href' => '#section-6',
            ];
          }
          elseif ($block['#block_content']->field_title->value == 'Student Programs Button Links') {
            $variables['about_student_programs']['program_block'] = $block;
          }
          elseif ($block['#block_content']->field_title->value == 'Access to Information') {
            $variables['about_access'] = [
              'col_1' => [
                'content' => $block['field_body_left'][0],
              ],
              'col_2' => [
                'content' => $block['field_body_right'][0],
              ],
            ];
            $variables['sticky_nav']['sections'][] = [
              'title' => $block['#block_content']->field_title->value,
              'href' => '#section-7',
            ];
          }
          else {
            continue 2;
          }
          break;

        case 'video':
          if ($block['#block_content']->info->value == 'Senate Chamber Visit Video') {
            $variables['landing_page_hero']['body'] = $block;
          }
          break;

        case 'quick_facts':
          if ($block['#block_content']->info->value == 'Senate Quick Facts') {
            $variables['quick_facts_block'] = $block;
          }
          break;

        case 'blocks':
          if ($block['#block_content']->info->value == 'How A Bill Becomes Law') {
            $variables['how_senate_works_block'] = $block;
          }
          break;

        case 'embed':
          $variables['district_map_title'] = $block['#block_content']->field_title->value;
          if ($block['#block_content']->info->value == 'District Map') {
            $variables['district_map_title'] = $block['#block_content']->info->value;
            $variables['district_map_embed'] = $block;
          }
          $variables['sticky_nav']['sections'][] = [
            'title' => $block['#block_content']->info->value,
            'href' => '#section-3',
          ];
          break;

        case 'slider':
          if ($block['#block_content']->field_title->value == 'Visit the Capitol') {
            $variables['about_tour']['title'] = $block['#block_content']->field_title->value;
            $variables['about_tour']['carousel_block'] = $block;
            $variables['sticky_nav']['sections'][] = [
              'title' => $block['#block_content']->field_title->value,
              'href' => '#section-5',
            ];
          }
          break;
      }
    }
  }
}

/**
 * Implements hook_preprocess_node__NODE_TYPE().
 */
function nysenate_theme_preprocess_node__landing__explore_issues(&$variables) {
  foreach ($variables['content']['field_landing_blocks'] as $key => $item) {
    if (!is_numeric($key)) {
      continue;
    }

    if ($item['#block_content']->bundle() == 'text') {
      if ($item['#block_content']->field_title->value == 'intro') {
        $variables['intro_text'] = \Drupal::entityTypeManager()
          ->getViewBuilder('block_content')
          ->view($item['#block_content']);
      }
    }
    elseif ($item['#block_content']->bundle() == 'views') {
      if ($item['#block_content']->field_title->value == 'Issues') {
        $variables['explore_issues_alpha'] = \Drupal::entityTypeManager()
          ->getViewBuilder('block_content')
          ->view($item['#block_content']);
      }
      elseif ($item['#block_content']->field_title->value == 'Issues Anon') {
        $variables['explore_issues_alpha_anon'] = \Drupal::entityTypeManager()
          ->getViewBuilder('block_content')
          ->view($item['#block_content']);
      }
    }
  }

  // Fetch the Exposed Form Search block.
  $search_block = \Drupal::entityTypeManager()->getStorage('block')
    ->load('exposedformissues_listingsexplore_issues_alpha');
  $render_search_block = \Drupal::entityTypeManager()
    ->getViewBuilder('block')->view($search_block);
  $variables['issues_search'] = $render_search_block;

  // Fetch the Issue Explorer Menu block.
  $menu_block = \Drupal::entityTypeManager()->getStorage('block')
    ->load('issueexplorermenu');
  $render_menu_block = \Drupal::entityTypeManager()
    ->getViewBuilder('block')->view($menu_block);
  $variables['issues_menu'] = $render_menu_block;
}

/**
 * Implements hook_preprocess_HOOK().
 */
function nysenate_theme_preprocess_node__video(&$variables) {
  $node = \Drupal::routeMatch()->getParameter('node');
  try {
    $senator = $node->get('field_senator_multiref')->entity ?? NULL;
    $senator_link = $senator
      ? \Drupal::service('nys_senators.microsites')->getMicrosite($senator)
      : '';
  }
  catch (\Throwable) {
    $senator_link = '';
  }
  $variables['senator_link'] = $senator_link;

}

/**
 * Implements hook_preprocess_node_TYPE().
 */
function nysenate_theme_preprocess_node__student_program(&$variables) {
  if (isset($variables['content']['field_image_main'][0])) {
    $variables['field_image_title'] = $variables['content']['field_image_main'][0]['#media']->field_image->title;
  }
  $variables['node_id'] = $variables['node']->id();

  // Get Chapters/Accordion list.
  $chapters = [];
  $accordion_items = $variables['content']['field_accordion'][0]['field_accordion_item'] ?? [];

  foreach ($accordion_items as $key => $item) {
    if (!is_numeric($key)) {
      continue;
    }

    $title = '';
    $body = '';

    if ($item['#paragraph']->field_title->value) {
      $title = $item['#paragraph']->field_title->value;
    }

    if ($item['#paragraph']->field_body->value) {
      $body = $item['#paragraph']->field_body->value;
    }

    $chapters[] = [
      'title' => $title,
      'body' => $body,
    ];

  }
  $variables['chapters'] = $chapters;

  // Get Student Programs Block.
  /** @var \Drupal\block\BlockViewBuilder $view_builder */
  $view_builder = \Drupal::entityTypeManager()->getViewBuilder('block_content');
  $student_programs = [];
  $student_program_block = \Drupal::entityTypeManager()
    ->getStorage('block_content')
    ->loadByProperties([
      'type' => 'text',
      'field_title' => 'Student Programs Overview Text',
    ]);

  if (is_array($student_program_block)) {
    $student_program_block = reset($student_program_block);
  }

  if (!empty($student_program_block)) {
    $block_content = $view_builder->view($student_program_block);
    $student_programs = $view_builder->build($block_content);
    $variables['student_programs'] = $student_programs;
  }

  $program_links_block = \Drupal::entityTypeManager()
    ->getStorage('block_content')
    ->loadByProperties([
      'type' => 'text',
      'field_title' => 'Student Programs Program Links',
    ]);

  if (is_array($program_links_block)) {
    $program_links_block = reset($program_links_block);
  }

  if (!empty($program_links_block)) {
    $block_content = $view_builder->view($program_links_block);
    $program_links = $view_builder->build($block_content);
    $variables['program_links'] = $program_links;
  }

  // Get Contact Us Block.
  $contact_us_block = \Drupal::entityTypeManager()
    ->getStorage('block_content')
    ->loadByProperties([
      'type' => 'text',
      'field_title' => 'Contact Us',
    ]);

  if (is_array($contact_us_block)) {
    $contact_us_block = reset($contact_us_block);
  }

  if (!empty($contact_us_block)) {
    $block_content = $view_builder->view($contact_us_block);
    $contact_us = $view_builder->build($block_content);
    $variables['contact_us'] = $contact_us;
  }
}

/**
 * Implements hook_preprocess_comment().
 */
function nysenate_theme_preprocess_comment(&$variables) {
  $comment = $variables['comment'];
  $date = $comment->getCreatedTime();
  $variables['created_relative'] = \Drupal::service('date.formatter')->formatTimeDiffSince($date, ['granularity' => 1]);

  // Set author value based on anonymous flag.
  $display_author = $variables['author'];
  if ($comment->hasField('field_anonymous') && !$comment->get('field_anonymous')->isEmpty()) {
    if ($comment->field_anonymous->value == 1) {
      $display_author = t('Anonymous');
      $variables['attributes']['data-comment-user-id'] = 'anon';
    }
  }

  if ($comment->status->value == 0) {
    $uid = $comment->uid->target_id;
    $user = \Drupal::entityTypeManager()->getStorage('user')
      ->load($uid);

    $node = \Drupal::routeMatch()->getParameter('node');
    if ($node instanceof NodeInterface) {
      $params = [
        'author_name' => $user->name->value,
        'title' => $node->title->value,
      ];
      $link = Url::fromUserInput('/admin/content/comment/approval', ['query' => $params])->toString();
      $variables['approve_link'] = $link;
    }
  }

  $variables['display_author'] = $display_author;
}

/**
 * Implements hook_preprocess_tweets().
 */
function nysenate_theme_preprocess_tweets(&$variables) {
  $args = [];
  if (!empty($variables['elements']['#tweets'])) {
    $args = [
      '@username' => $variables['elements']['#tweets'][0]['username'],
    ];
  }

  // Follow link.
  $variables['content']['follow_link'] = [
    '#type' => 'link',
    '#title' => t('Follow'),
    '#url' => Url::fromUri(strtr('https://twitter.com/intent/follow?screen_name=@username', $args)),
  ];

  // Account link.
  $variables['content']['account_link'] = [
    '#type' => 'link',
    '#title' => strtr('@@username', $args),
    '#url' => Url::fromUri(strtr('https://twitter.com/@username', $args)),
  ];
  // Profile image.
  $variables['content']['profile_image'] = [
    '#markup' => strtr('<img src="//pbs.twimg.com/profile_images/1618645642884038657/zT-Caq5N_normal.jpg" width="100" height"100" />', $args),
  ];

  $elements = $variables['elements']['#tweets'];
  foreach ($elements as $element) {
    $created_at = $element['created_at'];
    $date = date(strtotime($created_at));
    $variables['date'] = \Drupal::service('date.formatter')->formatInterval(REQUEST_TIME - $date);
    $variables['content']['items'][] = [
      'body' => $element['text'],
      'week' => $variables['date'],
    ];
  }
}

/**
 * Implements hook_preprocess_user().
 */
function nysenate_theme_preprocess_user__dashboard_profile(&$variables) {
  $media_storage = \Drupal::entityTypeManager()->getStorage('media');
  $user_storage = \Drupal::entityTypeManager()->getStorage('user');
  $user = $user_storage->load(\Drupal::currentUser()->id());

  $image_src = NULL;
  if ($user->hasField('field_profile_picture') && !$user->get('field_profile_picture')->isEmpty()) {
    $media = !empty($user->field_profile_picture->target_id) ? $media_storage->load($user->field_profile_picture->target_id) : NULL;
    if (!empty($media)) {
      $file = !empty($media->field_image->target_id) ? File::load($media->field_image->target_id) : NULL;
      if (!empty($file)) {
        $image_src = \Drupal::service('file_url_generator')->generateAbsoluteString($file->getFileUri());
      }
    }
  }

  $address = [];
  if (!$user->field_address->isEmpty()) {
    foreach ($user->field_address->getValue()[0] as $key => $value) {
      $address[$key] = $value;
    }
  }

  $name = '';
  if (!$user->field_first_name->isEmpty()) {
    $name = $user->field_first_name->value;
  }
  if (!$user->field_last_name->isEmpty()) {
    $name = $name . ' ' . $user->field_last_name->value;
  }

  $variables['name'] = $name;
  $variables['email'] = $user->getEmail();
  $variables['address'] = $address;
  $variables['image_src'] = $image_src;
  $variables['edit_url'] = '/dashboard/edit';
}

/**
 * Implements hook_preprocess_webform_confirmation().
 */
function nysenate_theme_preprocess_webform_confirmation(&$variables) {
  $submissions = [];
  if (in_array($variables['webform']->id(),
    ['school_form', 'school_form_thanksgiving', 'school_form_earth_day'])) {
    $webform = \Drupal::entityTypeManager()->getStorage('webform')->load($variables['webform']->id());

    $school_id = $variables['webform_submission']->getData()['school_name'];
    $school = \Drupal::entityTypeManager()->getStorage('node')->load($school_id);
    $grades = $webform->getElementsDecoded()['grade']['#options'];
    $grade = $variables['webform_submission']->getData()['grade'];
    $submission_types = $webform->getElementsDecoded()['submissions']['attach_your_submission']['#element']['submission_type']['#options'] ?? NULL;

    $variables['school_name'] = $school->title->value ?? '';
    $variables['contact_name'] = $variables['webform_submission']->getData()['contact_name'] ?? '';
    $variables['contact_email'] = $variables['webform_submission']->getData()['contact_email'] ?? '';
    $variables['grade'] = $grades[$grade] ?? '';

    $student_submissions = $variables['webform_submission']->getData()['attach_your_submission'] ?? [];

    foreach ($student_submissions as $submission) {
      $file = \Drupal::entityTypeManager()->getStorage('file')->load($submission['student_submission']);
      $file_name = $file->getFilename();
      $submissions[] = [
        'students_name' => $submission['student_name'],
        'category' => $submission_types[$submission['submission_type'] ?? NULL] ?? NULL,
        'attachment' => $file_name,
      ];
    }
  }
  $variables['student_submissions'] = $submissions;
}

