{{ attach_library('nysenate_theme/nysenate-senators-talking-about-this-issue') }}

<div class="c-block c-issue--mentions">
  <h2 class="c-detail--subhead c-detail--section-title">{{ 'Senators Talking About this Issue'|t }}</h2>
  {% if senators|length > 6 %}  
    <div class="initial_co-sponsors ">
      {% for senator in senators %}
        {% if loop.index < 6 %}
          {{ senator }}
        {% endif %}
      {% endfor %}
    </div>

    <div class="other_co-sponsors">
      <dl class="c-block c-detail--actions accordion" data-accordion>
        <dd class="accordion-navigation">
          <a href="#accordion-11" class="accordion--btn nys-btn-more--bg" data-open-text="see less" data-closed-text="see more">{{ 'see more'|t }}</a>
          <div id="accordion-11" class="content">
            {% for senator in senators|slice(6) %}
              {{ senator }}
            {% endfor %}
          </div>
        </dd>
      </dl>
    </div>
  {% else %}
    <div class="initial_co-sponsors c-issue--mentions">
      {% for senator in senators %}
        {{ senator }}
      {% endfor %}
    </div>
  {% endif %}
</div>
