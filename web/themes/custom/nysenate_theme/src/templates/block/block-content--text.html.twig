{#
/**
 * @file
 * Default theme implementation to display a block content.
 *
 * @see template_preprocess_block_content_template()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'block-content',
    'block-content--type-' ~ bundle|clean_class,
    'block-content--' ~ id,
    'block-content--view-mode-' ~ view_mode|clean_class,
    'container'
  ]
%}

{% set link = {
    url: content.field_link[0]['#url'],
    text: content.field_link[0]['#title']
  }
%}

{% include "@nysenate_theme/text-layout/text-layout.twig" with {
  is_full_bleed: is_full_bleed,
  with_bg: with_bg,
  is_two_column: is_two_column,
  contents: text,
  title: content.field_title,
  title_show: content.field_show_title[0]['#markup'],
  title_format: content.field_title_format[0]['#markup'],
  link: link.url is not same as NULL ? link : NULL
} only %}
