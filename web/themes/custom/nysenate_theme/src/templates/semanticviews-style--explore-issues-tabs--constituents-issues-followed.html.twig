{#
/**
 * @file
 * Default simple view template to display a list of rows.
 *
 * @ingroup views_templates
 */
#}
{{ attach_library('nysenate_theme/newsroom-content') }}
{{ attach_library('nysenate_theme/nysenate-issues') }}
{{ attach_library('nysenate_theme/nysenate-tabs') }}

<div class="content-list__wrapper">
  {% for issue in issue_cards %}
    <div class="c-block--issue content__item">
      <h4 class="c-issue-block--title">
        <a href="{{ issue.issue_link.url }}">{{ issue.issue_link.text }}</a>
      </h4>
      <div class="c-block--btn">
        {% if issue.flag_follow_issue %}
          {{ issue.flag_follow_issue }}
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

{% set limit = 6 %}

{% if issue_cards|length > limit %}
  <div class="item-list" data-limit="{{ limit }}">
    <div class="pager pager-load-more">
      <span class="pager-next first last">
        <a class="load-more">See more issues</a>
      </span>
    </div>
  </div>
{% endif %}
